@import url('https://fonts.googleapis.com/css?family=Roboto:400,700,500');

html
  background-color: #fff
  font-family: 'Arial'
  color: #f5f5f5

.container
  position: absolute
  width: 100vw

.title
  background-color: #2887c8
  height: 75px
  width: 100vw
  text-align: center
  margin-left: -8px
  margin-top: -30px
  margin-bottom: 25px
  padding-top: 15px

.form
.input
.button
.result
  margin: 0 auto
  width: 50%
  text-align: center

.result
  color: #2f2e2e
  text-align: left

.result a
  color: #2f2e2e
  text-decoration: none

.pad
  padding-bottom: 25px

.padLeft
  margin-left: 5px

.wikiButtonRandom
.wikiButton
  border: 3px solid #2887c8
  cursor: pointer
  user-select: none
  transition: all 60ms ease-in-out
  text-align: center
  white-space: nowrap
  text-decoration: none !important
  text-transform: none
  text-transform: capitalize
  color: #2887c8
  font-family: 'Roboto'
  font-weight: bold
  font-size: 0.9em
  width: 125px
  height: 25px
  background-color: #ffffff
  border-radius: 5px
  &:hover
    transition: all 1000ms ease
    background-color: #2887c8
    color: #ffffff
  &:focus
    outline: 0

input[type='text']
  color: #2f2e2e
  font-family: 'Roboto'
  font-weight: bold
  font-size: 0.9em
  border: 0
  border-bottom: 3px solid #2887c8
  &:focus
    outline: 0