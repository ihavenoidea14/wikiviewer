@import url('https://fonts.googleapis.com/css?family=Roboto:400,700,500');
@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');

html
  background-color: #fff
  font-family: 'Arial'
  color: #f5f5f5

.container
  position: absolute
  width: 100vw

.title
  background-color: #2887c8
  height: 150px
  width: 100vw
  text-align: center
  margin-left: -8px
  margin-top: -30px
  margin-bottom: 25px
  padding-top: 15px
  padding-left: 8px
  overflow: hidden
  box-shadow: -2px 3px 5px #808080

.title a
  text-decoration: none
  color: #ffffff
  margin-right: 10px

.form
.input
.button
.result
  margin: 0 auto
  width: 50%
  text-align: center

.result
  color: #ffffff
  text-align: left
  background-color: #2887c8
  box-shadow: -2px 3px 5px #808080

.result a
  color: #ffffff
  text-decoration: none

.result h3
  padding: 25px 15px 0px 20px
  background-color: #2887c8

.result p
  color: #2887c8
  border: 3px solid #2887c8
  padding: 25px 25px 25px 15px
  background-color: #ffffff

.pad
  padding-bottom: 25px

.padLeft
  margin-left: 5px

.wikiButtonRandom
.wikiButton
  margin-bottom: 25px
  border: 3px solid #2887c8
  cursor: pointer
  user-select: none
  transition: all 60ms ease-in-out
  text-align: center
  white-space: nowrap
  text-decoration: none !important
  text-transform: none
  text-transform: capitalize
  color: #2887c8
  font-family: 'Roboto'
  font-weight: bold
  font-size: 0.9em
  width: 125px
  height: 25px
  background-color: #ffffff
  border-radius: 5px
  &:hover
    transition: all 1000ms ease
    background-color: #2887c8
    color: #ffffff
  &:focus
    outline: 0

input[type='text']
  color: #2f2e2e
  font-family: 'Roboto'
  font-weight: bold
  font-size: 0.9em
  border: 0
  border-bottom: 3px solid #2887c8
  &:focus
    outline: 0